{
  "manifest_version": 3,
  "name": "Twitter AI Comment Generator",
  "version": "1.1",
  "description": "Добавляет кнопку в Twitter для генерации комментариев с помощью Groq API",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*", "https://pro.x.com/"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*", "https://pro.x.com/* "],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}